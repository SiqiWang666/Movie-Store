@model IEnumerable<MovieStore.Core.Entities.Movie>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div>
    <div class="container-fluid">
        <div class="row">
            @foreach (var movie in Model)
            {
@*                 <partial name="_MovieCard" model="movie"/> *@
                 @await Html.PartialAsync("_MovieCard", movie)
            }
        </div>
    </div>
</div>